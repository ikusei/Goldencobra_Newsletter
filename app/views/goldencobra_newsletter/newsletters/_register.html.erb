<% css_prefix = "goldencobra-newsletter-registration" %>
	<h2 class="boxheader"><%= s("goldencobra_newsletter.newsletters_widget.headline") %></h2>
	<p class="description"><%= s("goldencobra_newsletter.newsletters_widget.description")%></p>

	<%#= form_tag "/goldencobra_newsletter/newsletters/register", :remote => true, :id => "goldencobra-newsletter-registration-form" do %>
	<form action="/goldencobra_newsletter/newsletters/register" method="post" data-remote="true" accept-charset="utf-8" id="goldencobra-newsletter-registration-form">
		<input type="hidden" value="<%= Time.now.to_i %>" name="authenticity_token"/>
		<%= hidden_field_tag(:newsletter_tags, newsletter_tag)%>
	
	  <div class='<%="#{css_prefix}-field-group" %>'>
	    <ul>
	      <li>
	        <%= radio_button_tag(:gender, "1") %>
	        <%= label_tag(t('activerecord.attributes.user.male'), nil, class: "newsletter_radio_label") %> <span class="asterisk">*</span>
					
	      </li>

	      <li>
	        <%= radio_button_tag(:gender, "0") %>
	        <%= label_tag(t('activerecord.attributes.user.female'), nil, class: "newsletter_radio_label") %>
	      </li>
	    </ul>
	  </div>

		<label for="title" class="newsletter_textbox_label"><%= t('activerecord.attributes.user.title') %></label>
	  <%= text_field_tag(:title, "", :required => false) %><br />
		
		<label for="first_name" class="newsletter_textbox_label"><%= t('activerecord.attributes.user.firstname') %> <span class='asterisk'>*</span></label>
	  <%= text_field_tag(:first_name, "", :required => true) %><br />

		<label for="last_name" class="newsletter_textbox_label"><%= t('activerecord.attributes.user.lastname') %> <span class='asterisk'>*</span></label>
	  <%= text_field_tag(:last_name, "", :required => true) %><br />

		<label for="company" class="newsletter_textbox_label"><%= t('activerecord.models.company', :count => 1) %> <span class='asterisk'>*</span></label>
	  <%= text_field_tag(:company, "", :required => false) %><br />

		<%= label_tag(:phone, t('activerecord.attributes.goldencobra_events/company.phone'), class: "newsletter_textbox_label")%>
	  <%= text_field_tag(:phone, "", :required => false) %><br />

		<label for="email" class="newsletter_textbox_label"><%= t('activerecord.attributes.user.email') %> <span class='asterisk'>*</span></label>
	  <%= text_field_tag(:email, "", :required => true) %><br />

	<%# end %>
	
		<%= submit_tag("Eintragen", :id => "#{css_prefix}-submit") %>
	</form>
	
	<br />
	
	<p class="bottom_text"><%= s("goldencobra_newsletter.newsletters_widget.bottom_text")%></p><br />
	<p class="privacy_informations"><%= s("goldencobra_newsletter.newsletters_widget.privacy_informations")%><br />
		<a href='<%= "#{s('goldencobra_newsletter.newsletters_widget.privacy_informations_link')}" %>'><%= s("goldencobra_newsletter.newsletters_widget.privacy_informations_link_text")%></a></p>
